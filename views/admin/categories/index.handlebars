

<div class="row">

    <div class="col-sm-4">
        <h1>Create Cateogry</h1>
        <form action="/admin/categories/create" method="POST">

            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" placeholder="Enter title" class="form-control">
            </div>

            <button type="submit" class="btn btn-primary">Create Category</button>

        </form>

    </div>

    <div class="col-sm-8">
        <h1>Cateogries</h1>
        <table class="table">

            <thead>
                <tr>
                    <th>id</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>{{_id}}</td>
                    <td>{{name}}</td>
                    <td><a href="/admin/categories/edit/{{_id}}" class="btn btn-info">Edit</a></td>
                    <td>
                        <form action="/admin/categories/{{id}}?_method=DELETE" method="post">
                            <button type="submit" class="btn btn-danger">DELETE</button>
                        </form>
                    </td>
                </tr>
                {{/each}}
            </tbody>

        </table>

    </div>
    

</div>
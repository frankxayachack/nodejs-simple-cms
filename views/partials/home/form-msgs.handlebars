{{#if success_message}}
  <div class="alert alert-success">{{success_message}}</div>
{{/if}} 

{{#if error_message}}

  <div class="alert alert-danger">
    {{error_message}}
  </div>

{{/if}} 

{{#if error}}

  <div class="alert alert-danger">
    {{error}}
  </div>

{{/if}} 

{{#if errors}} 

  {{#each errors}}

  <div class="alert alert-danger" role="alert">
    {{message}}
  </div>

  {{/each}} 

{{/if}}